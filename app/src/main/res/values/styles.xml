<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorHint</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
    </style>

    <style name="SignInTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccentCredentials</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/sign_in_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>
</resources>