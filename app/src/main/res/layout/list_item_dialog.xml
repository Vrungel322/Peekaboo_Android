<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dialog_item_margin_top">

    <View
        android:id="@+id/dialogs_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dialog_item_underline_margin_left"
        android:layout_marginTop="@dimen/dialog_item_underline_margin_top"
        android:background="@color/dialog_underline_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_item_width"
        android:orientation="vertical"
        android:paddingTop="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="1dp">

            <FrameLayout
                android:layout_width="@dimen/dialog_item_photo_size"
                android:layout_height="@dimen/dialog_item_photo_size"
                android:layout_margin="@dimen/dialog_item_margin"
                android:layout_marginBottom="@dimen/dialog_photo_margin">

                <ImageView
                    android:id="@+id/default_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:src="@drawable/avatar_icon" />

                <TextView
                    android:id="@+id/default_avatar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    tools:text="AB"
                    android:paddingBottom="1dp"
                    android:paddingLeft="1dp"
                    android:textColor="#FFF"
                    android:textSize="28sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/contact_avatar_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:border_color="@android:color/transparent"/>


                <com.peekaboo.presentation.app.view.OnlineIndicatorView
                    android:id="@+id/oiOnlineIndicator"
                    android:layout_width="@dimen/online_indicator_size"
                    android:layout_height="@dimen/online_indicator_size"
                    android:layout_gravity="right" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dialog_item_margin"
                    android:layout_toRightOf="@id/ivDialog_contact"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/contact_name_text_view"
                            android:layout_width="@dimen/dialog_name_width"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="@dimen/dialog_username_text_size" />
                        <!--android:text="Albert Einstain" />-->

                        <TextView
                            android:id="@+id/message_preview_text_view"
                            android:layout_width="@dimen/dialog_name_width"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/dialog_preview" />
                    </LinearLayout>

                    <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:swipe="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/swipe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        swipe:rightEdgeSwipeOffset="0dp">

                        <LinearLayout
                            android:id="@+id/bottom_wrapper_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:tag="Bottom4">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/delete_image_view"
                                    android:layout_width="@dimen/dialog_swipe_item_width"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="3dp"
                                    android:paddingRight="3dp"
                                    android:src="@drawable/musorka" />

                                <ImageView
                                    android:id="@+id/favourite_image_view"
                                    android:layout_width="@dimen/dialog_swipe_item_width"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="3dp"
                                    android:paddingRight="3dp"
                                    android:src="@drawable/star" />

                                <ImageView
                                    android:id="@+id/mute_image_view"
                                    android:layout_width="@dimen/dialog_swipe_item_width"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="3dp"
                                    android:paddingRight="3dp"
                                    android:src="@drawable/sound" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="3dp"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:paddingRight="2dp">

                            <TextView
                                android:id="@+id/timestamp_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dialog_timedate_margin_Right"
                                android:layout_marginTop="4dp"
                                android:text="16:15"
                                android:textColor="@color/dialog_time_date_name"
                                android:textSize="@dimen/dialog_timestamp_text_size" />

                            <ImageView
                                android:id="@+id/message_status_image_view"
                                android:layout_width="@dimen/dialog_status_size"
                                android:layout_height="@dimen/dialog_status_size"
                                android:layout_marginRight="@dimen/dialog_item_margin"
                                android:layout_toLeftOf="@+id/tvDialog_time_date"
                                android:src="@drawable/ic_check" />

                        </LinearLayout>
                    </com.daimajia.swipe.SwipeLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

