<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dialog_item_margin_top"
    android:padding="@dimen/dialog_item_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_item_width"
        android:orientation="vertical"
        android:paddingTop="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="1dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dialog_item_size"
                android:paddingRight="8dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/contact_avatar_image_view"
                    android:layout_width="@dimen/dialog_item_photo_size"
                    android:layout_height="@dimen/dialog_item_photo_size"
                    android:layout_margin="@dimen/dialog_item_margin"
                    android:layout_marginBottom="@dimen/dialog_photo_margin"
                    android:src="@mipmap/ic_launcher"
                    app:border_color="@color/colorAccent" />

                <TextView
                    android:id="@+id/unread_count_text_view"
                    android:layout_width="@dimen/dialog_number_dot"
                    android:layout_height="@dimen/dialog_number_dot"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle_online"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="7sp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dialog_item_margin"
                    android:layout_toRightOf="@id/ivDialog_contact"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/contact_name_text_view"
                            android:layout_width="@dimen/dialog_name_width"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:singleLine="true"
                            android:textSize="@dimen/dialog_username_text_size"
                            android:textColor="@color/dialog_time_date_name"/>

                        <TextView
                            android:id="@+id/message_preview_text_view"
                            android:layout_width="@dimen/dialog_name_width"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/dialog_preview"/>
                    </LinearLayout>

                    <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:swipe="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/swipe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        swipe:rightEdgeSwipeOffset="0dp">

                        <LinearLayout
                            android:id="@+id/bottom_wrapper_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:tag="Bottom4">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/delete_image_view"
                                    android:layout_width="@dimen/dialog_swipe_item_width"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="3dp"
                                    android:paddingRight="3dp"
                                    android:src="@drawable/musorka" />

                                <ImageView
                                    android:id="@+id/favourite_image_view"
                                    android:layout_width="@dimen/dialog_swipe_item_width"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="3dp"
                                    android:paddingRight="3dp"
                                    android:src="@drawable/star" />

                                <ImageView
                                    android:id="@+id/mute_image_view"
                                    android:layout_width="@dimen/dialog_swipe_item_width"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="3dp"
                                    android:paddingRight="3dp"
                                    android:src="@drawable/sound" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="3dp"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:paddingRight="2dp">

                            <TextView
                                android:id="@+id/timestamp_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dialog_timedate_margin_Right"
                                android:text="16:15"
                                android:textColor="@color/dialog_time_date_name"
                                android:textSize="@dimen/dialog_timestamp_text_size" />

                            <ImageView
                                android:id="@+id/message_status_image_view"
                                android:layout_width="@dimen/dialog_status_size"
                                android:layout_height="@dimen/dialog_status_size"
                                android:layout_marginRight="@dimen/dialog_item_margin"
                                android:layout_toLeftOf="@+id/tvDialog_time_date"
                                android:src="@drawable/ic_check" />

                        </LinearLayout>
                    </com.daimajia.swipe.SwipeLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="@dimen/dialog_item_underline"
        android:layout_height="1dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/dialog_item_underline_margin_top"
        android:background="@color/dialog_underline_color" />
</android.support.design.widget.CoordinatorLayout>

