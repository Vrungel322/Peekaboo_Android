<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_item_padding">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_contact_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_item_margin"
        android:src="@mipmap/ic_launcher"
        app:border_color="@color/colorAccent"
        app:border_width="@dimen/circle_photo_border_width" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dialog_item_margin"
        android:layout_toRightOf="@id/dialog_contact_image_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dialog_item_margin">

            <TextView
                android:id="@+id/dialog_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Name Surname"
                android:textSize="@dimen/dialog_username_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_time_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="16:15"
                android:textSize="@dimen/dialog_timestamp_text_size" />
        </RelativeLayout>
        <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

              <TextView
                 android:id="@+id/dialog_preview_text_view"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:singleLine="true"
                 android:text="Some payload for example" />

              <ImageView
                 android:id="@+id/dialog_status_image_view1"
                 android:layout_width="@dimen/dialog_status_size"
                 android:layout_alignParentRight="true"
                 android:layout_height="@dimen/dialog_status_size"
                 android:layout_marginRight="@dimen/dialog_item_margin"
                 android:src="@drawable/ic_check" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>