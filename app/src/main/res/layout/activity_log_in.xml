<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lLogIn">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/logo_long"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_signup_side"
        android:paddingRight="@dimen/padding_signup_side"
        android:paddingTop="@dimen/padding_top">

        <com.peekaboo.presentation.app.view.RobotoTextInputLayout
            android:id="@+id/ilUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.peekaboo.presentation.app.view.RobotoEditText
                android:id="@+id/etLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/usernameOrLogin"
                android:textSize="@dimen/text_size" />


        </com.peekaboo.presentation.app.view.RobotoTextInputLayout>

        <com.peekaboo.presentation.app.view.RobotoTextInputLayout
            android:id="@+id/ilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_top">

            <com.peekaboo.presentation.app.view.RobotoEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size" />

        </com.peekaboo.presentation.app.view.RobotoTextInputLayout>

        <com.peekaboo.presentation.app.view.ComfortaaButton
            android:id="@+id/bSignIn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/credentials_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_signup_side"
            android:background="@drawable/button"
            android:text="@string/signIn"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.peekaboo.presentation.app.view.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="@string/forgot"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/hint_text_size"/>

            <com.peekaboo.presentation.app.view.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="@dimen/text_padding"
                android:text="@string/forgot_password"
                android:textColor="@color/textColor"
                android:textSize="@dimen/hint_text_size"
                android:textStyle="bold"


                />

        </LinearLayout>
    </LinearLayout>

    <com.peekaboo.presentation.app.view.ComfortaaTextView
        android:id="@+id/tvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:padding="@dimen/appIntroDefaultPaddingBottom"
        android:text="@string/sign_up"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size" />

</RelativeLayout>
