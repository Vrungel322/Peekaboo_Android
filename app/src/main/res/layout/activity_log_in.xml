                    android:id="@+id/bVk"
                    android:layout_width="@dimen/social_network_button_size"
                    android:layout_height="@dimen/social_network_button_size"
                    android:background="@drawable/vk" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvSingUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="@dimen/text_padding"
                android:text="@string/bySignUp2"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_signup_side"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
