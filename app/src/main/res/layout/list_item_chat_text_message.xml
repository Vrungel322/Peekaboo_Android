<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/chat_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/chat_message_bubble_max_width"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvChatMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/underline_selected_color"
                android:textSize="@dimen/chat_message_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivChatMessageStatus"
                    android:layout_width="@dimen/chat_message_status_size"
                    android:layout_height="@dimen/chat_message_status_size"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_check" />

                <TextView
                    android:id="@+id/tvChatTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yesterday"
                    android:textColor="@color/colorDarkAccent"
                    android:layout_gravity="end"
                    android:textSize="@dimen/chat_timestamp_text_size" />


            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>