<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/hintConfirmationCode"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="?android:attr/textColorSecondary" />

    <com.peekaboo.presentation.app.view.NormalCodeInput
        android:id="@+id/ciConfirmation"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginStart="56dp"
        app:codes="4"
        app:text_color="@color/textColorPrimaryCredentials"
        app:underline_color="@color/textColorPrimaryCredentials"
        app:underline_selected_color="@color/colorAccent" />

    <com.peekaboo.presentation.app.view.ComfortaaTextView
        android:id="@+id/bOk"
        android:layout_width="wrap_content"
        android:background="@drawable/button_small"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/textColorPrimaryCredentials"
        android:textSize="12sp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:enabled="false"
        android:text="@string/ok" />

</LinearLayout>