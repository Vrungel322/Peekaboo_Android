<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ChatActivityTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarChat"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            android:titleTextColor="@color/textColor" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="ifContentScrolls"
        android:padding="@dimen/items_margin"
        android:scrollbars="none" />

    <HorizontalScrollView
        android:id="@+id/svItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/white_background"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <io.codetail.widget.RevealFrameLayout
                android:id="@+id/rflMessageBody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="8"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="2dp">

                <FrameLayout
                    android:id="@+id/flMessageBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etMessageBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_left_bubble"
                        android:maxLines="3"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:ellipsize="end"
                        android:padding="10dp" />

                    <ImageButton
                        android:id="@+id/bSendMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="4dp"
                        android:background="@drawable/paper_plane"
                        android:foregroundGravity="center_vertical" />
                </FrameLayout>

            </io.codetail.widget.RevealFrameLayout>

            <LinearLayout
                android:id="@+id/llItems"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bMesageOpen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/chat_buttons_margin"
                    android:layout_marginRight="@dimen/chat_buttons_margin"
                    android:layout_weight="2"
                    android:background="@drawable/text" />

                <ImageButton
                    android:id="@+id/smile_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/chat_buttons_margin"
                    android:layout_marginRight="@dimen/chat_buttons_margin"
                    android:layout_weight="2"
                    android:background="@drawable/smile" />

                <ImageButton
                    android:id="@+id/micro_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/chat_buttons_margin"
                    android:layout_marginRight="@dimen/chat_buttons_margin"
                    android:layout_weight="2"
                    android:background="@drawable/voice" />

                <ImageButton
                    android:id="@+id/photo_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/chat_buttons_margin"
                    android:layout_marginRight="@dimen/chat_buttons_margin"
                    android:layout_weight="2"
                    android:background="@drawable/photo" />

                <ImageButton
                    android:id="@+id/camera_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/chat_buttons_margin"
                    android:layout_marginRight="@dimen/chat_buttons_margin"
                    android:layout_weight="2"
                    android:background="@drawable/video" />

                <ImageButton
                    android:id="@+id/gallery_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/chat_buttons_margin"
                    android:layout_marginRight="@dimen/chat_buttons_margin"
                    android:layout_weight="2"
                    android:background="@drawable/image" />

                <ImageButton
                    android:id="@+id/navigation_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/chat_buttons_margin"
                    android:layout_marginRight="@dimen/chat_buttons_margin"
                    android:layout_weight="2"
                    android:background="@drawable/point" />

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>