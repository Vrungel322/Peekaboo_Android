<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/settings_card_margin"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:text="@string/name"
                    android:textColor="@color/colorAccent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_card_margin">

                    <FrameLayout
                        android:id="@+id/flSettingsIconAvatar"
                        android:layout_width="@dimen/sizeOfIconInDrawer"
                        android:layout_height="@dimen/sizeOfIconInDrawer"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:src="@drawable/ic_photo_camera" />

                        <ImageView
                            android:id="@+id/userAvatarInSettings"
                            android:layout_width="@dimen/sizeOfIconInDrawer"
                            android:layout_height="@dimen/sizeOfIconInDrawer"
                            tools:background="@drawable/raccoon" />
                    </FrameLayout>


                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/settings_card_margin"
                        android:layout_marginRight="@dimen/settings_card_margin"
                        android:layout_toRightOf="@id/flSettingsIconAvatar"
                        android:background="@null"
                        android:hint="@string/name"
                        android:textColor="#000"
                        android:textSize="@dimen/primary_text_size" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/name"
                        android:layout_marginBottom="@dimen/settings_underline_margin"
                        android:layout_marginLeft="@dimen/settings_card_margin"
                        android:layout_marginTop="36dp"
                        android:layout_toRightOf="@id/flSettingsIconAvatar"
                        android:background="@color/dialog_underline_color" />

                    <EditText
                        android:id="@+id/etSurname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/divider"
                        android:layout_marginLeft="@dimen/settings_card_margin"
                        android:layout_marginRight="@dimen/settings_card_margin"
                        android:layout_toRightOf="@id/flSettingsIconAvatar"
                        android:background="@null"
                        android:hint="@string/surname"
                        android:textColor="#000"
                        android:textSize="@dimen/primary_text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/etSurname"
                        android:layout_marginLeft="@dimen/settings_card_margin"
                        android:layout_marginTop="@dimen/settings_underline_margin"
                        android:layout_toRightOf="@id/flSettingsIconAvatar"
                        android:background="@color/dialog_underline_color" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin"
                    android:layout_marginTop="@dimen/settings_underline_margin"
                    android:background="@null"
                    android:hint="@string/nickname"
                    android:visibility="gone"
                    android:textColor="#000"
                    android:textSize="@dimen/primary_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:layout_marginTop="@dimen/settings_underline_margin"
                    android:background="@color/dialog_underline_color" />

                <EditText
                    android:id="@+id/etPhonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin"
                    android:layout_marginTop="@dimen/settings_underline_margin"
                    android:background="@null"
                    android:hint="@string/phoneNumber"
                    android:textColor="#000"
                    android:textSize="@dimen/primary_text_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/settings_card_margin"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:text="@string/city"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:id="@+id/etCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin"
                    android:background="@null"
                    android:hint="@string/country"
                    android:textColor="#000"
                    android:textSize="@dimen/primary_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:layout_marginTop="@dimen/settings_underline_margin"
                    android:background="@color/dialog_underline_color" />

                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin"
                    android:background="@null"
                    android:hint="@string/city"
                    android:textColor="#000"
                    android:textSize="@dimen/primary_text_size" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/settings_card_margin"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:text="@string/general"
                    android:textColor="@color/colorAccent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/sms_integrate"
                        android:textColor="#000"
                        android:textSize="@dimen/primary_text_size" />

                    <com.rm.rmswitch.RMSwitch
                        android:id="@+id/sms"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:foregroundGravity="right"
                        android:paddingLeft="4dp"
                        app:switchBkgCheckedColor="@color/colorAccent"
                        app:switchBkgNotCheckedColor="@color/colorDarkAccent"
                        app:switchToggleCheckedColor="@color/colorAccent"
                        app:switchToggleCheckedImage="@drawable/sms_white"
                        app:switchToggleNotCheckedColor="@color/colorDarkAccent"
                        app:switchToggleNotCheckedImage="@drawable/no_sms_white" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:layout_marginTop="@dimen/settings_underline_margin"
                    android:background="@color/dialog_underline_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/driver_mode"
                        android:textColor="#000"
                        android:textSize="@dimen/primary_text_size" />

                    <com.rm.rmswitch.RMSwitch
                        android:id="@+id/driverMode"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:foregroundGravity="right"
                        android:paddingLeft="4dp"
                        app:switchBkgCheckedColor="@color/colorAccent"
                        app:switchBkgNotCheckedColor="@color/colorDarkAccent"
                        app:switchToggleCheckedColor="@color/colorAccent"
                        app:switchToggleCheckedImage="@drawable/car_white_24dp"
                        app:switchToggleNotCheckedColor="@color/colorDarkAccent"
                        app:switchToggleNotCheckedImage="@drawable/directions_walk_white_24dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:layout_marginTop="@dimen/settings_underline_margin"
                    android:background="@color/dialog_underline_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/disable_notifications"
                        android:textColor="#000"
                        android:textSize="@dimen/primary_text_size" />

                    <com.rm.rmswitch.RMSwitch
                        android:id="@+id/notificationOff"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:foregroundGravity="right"
                        android:paddingLeft="4dp"
                        app:switchBkgCheckedColor="@color/colorAccent"
                        app:switchBkgNotCheckedColor="@color/colorDarkAccent"
                        app:switchToggleCheckedColor="@color/colorAccent"
                        app:switchToggleCheckedImage="@drawable/notifications_off_white_24dp"
                        app:switchToggleNotCheckedColor="@color/colorDarkAccent"
                        app:switchToggleNotCheckedImage="@drawable/notifications_white_24dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:layout_marginTop="@dimen/settings_underline_margin"
                    android:background="@color/dialog_underline_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prefer_text"
                        android:textColor="#000"
                        android:textSize="@dimen/primary_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DE-DE BirgitVoice"
                        android:textColor="#969696"
                        android:textSize="@dimen/secondary_text_size" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/settings_card_margin"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:text="@string/advanced"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/cloud_storage"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin"
                    android:background="@null"
                    android:clickable="true"
                    android:text="@string/default_cloud_storage"
                    android:textColor="#000"
                    android:textSize="@dimen/primary_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:layout_marginTop="@dimen/settings_underline_margin"
                    android:background="@color/dialog_underline_color" />

                <TextView
                    android:id="@+id/services_inter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin"
                    android:background="@null"
                    android:clickable="true"
                    android:text="@string/services_integration"
                    android:textColor="#000"
                    android:textSize="@dimen/primary_text_size" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/settings_card_margin"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:text="@string/social_network"
                    android:textColor="@color/colorAccent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/settings_underline_margin"
                    android:background="@color/dialog_underline_color" />

                <Button
                    android:id="@+id/bLogInToTwitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:layout_marginLeft="@dimen/settings_card_margin"
                    android:layout_marginRight="@dimen/settings_card_margin"
                    android:background="#1da1f2"
                    android:clickable="true"
                    android:text="@string/logIn_to_Twitter"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/primary_text_size" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>