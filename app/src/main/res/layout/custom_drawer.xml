<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/nav_header_width"
        android:layout_height="match_parent"
        android:background="@drawable/nav_background_gradient"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/nav_margin_top"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/nav_header_height"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/civUserIcon"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="false"
                                android:src="@drawable/enot" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvNameSurname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Raccoon Nigga"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/tvUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Raccoon"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/nav_padding_top"
                    android:background="@drawable/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/nav_padding_top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lvDialogs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/nav_content_margin_left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivIconChat"
                            android:layout_width="@dimen/nav_icon_width"
                            android:layout_height="@dimen/nav_icon_height"
                            android:background="@drawable/chats" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/nav_matgin_left_text"
                            android:text="@string/dialogs"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvCalls"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/nav_content_margin_left"
                        android:layout_marginTop="@dimen/nav_padding_top"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivIconCalls"
                            android:layout_width="@dimen/nav_icon_width"
                            android:layout_height="@dimen/nav_icon_height"
                            android:background="@drawable/calls" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/nav_matgin_left_text"
                            android:text="@string/calls"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvContacts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/nav_content_margin_left"
                        android:layout_marginTop="@dimen/nav_padding_top"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivIconContacts"
                            android:layout_width="@dimen/nav_icon_width"
                            android:layout_height="@dimen/nav_icon_height"
                            android:background="@drawable/contacts" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/nav_matgin_left_text"
                            android:text="@string/contacts"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/nav_content_margin_left"
                        android:layout_marginTop="@dimen/nav_padding_top"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivIconProfile"
                            android:layout_width="@dimen/nav_icon_width"
                            android:layout_height="@dimen/nav_icon_height"
                            android:background="@drawable/profile" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/nav_matgin_left_text"
                            android:text="@string/profile"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/nav_padding_top"
                        android:background="@drawable/divider" />

                    <LinearLayout
                        android:id="@+id/lvSettings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/nav_content_margin_left"
                        android:layout_marginTop="@dimen/nav_padding_top"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivIconSettings"
                            android:layout_width="@dimen/nav_icon_width"
                            android:layout_height="@dimen/nav_icon_height"
                            android:background="@drawable/settings" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/nav_matgin_left_text"
                            android:text="@string/settings"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvExit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/nav_content_margin_left"
                        android:layout_marginTop="@dimen/nav_padding_top"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ivIconExit"
                            android:layout_width="@dimen/nav_icon_width"
                            android:layout_height="@dimen/nav_icon_height"
                            android:background="@drawable/exit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/nav_matgin_left_text"
                            android:text="@string/exit"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>