<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutSignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_signup_side"
        android:paddingRight="@dimen/padding_signup_side">

        <com.peekaboo.presentation.app.view.RobotoTextInputLayout
            android:id="@+id/ilUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:errorTextAppearance="@style/Error.Design">

            <com.peekaboo.presentation.app.view.RobotoEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/username"
                android:imeOptions="actionNext"
                android:inputType="text" />
        </com.peekaboo.presentation.app.view.RobotoTextInputLayout>

        <com.peekaboo.presentation.app.view.RobotoTextInputLayout
            android:id="@+id/ilLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            app:errorTextAppearance="@style/Error.Design">

            <com.peekaboo.presentation.app.view.RobotoEditText
                android:id="@+id/etLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/emailOrPhoneNum"
                android:imeOptions="actionNext"
                android:inputType="text" />

        </com.peekaboo.presentation.app.view.RobotoTextInputLayout>

        <com.peekaboo.presentation.app.view.PasswordView
            android:id="@+id/pvPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            android:imeOptions="actionNext"
            custom:textHint="@string/password" />

        <com.peekaboo.presentation.app.view.PasswordView
            android:id="@+id/pvPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            android:imeOptions="actionDone"
            custom:textHint="@string/confirmPassword" />

        <com.peekaboo.presentation.app.view.ComfortaaButton
            android:id="@+id/bSignIn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/credentials_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_signup_side"
            android:background="@drawable/button"
            android:text="@string/createAccount"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/padding_top">

            <com.peekaboo.presentation.app.view.RobotoTextView
                android:id="@+id/tvSignUp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_space"
                android:text="@string/bySignUp1" />

            <com.peekaboo.presentation.app.view.RobotoTextView
                android:id="@+id/tvSingUp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="@dimen/text_space"
                android:text="@string/bySignUp2"
                android:textColor="@color/textColor" />

            <com.peekaboo.presentation.app.view.RobotoTextView
                android:id="@+id/tvSingUp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_space"
                android:text="@string/bySignUp3" />

            <com.peekaboo.presentation.app.view.RobotoTextView
                android:id="@+id/tvSignUp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="@dimen/text_space"
                android:text="@string/bySignUp4"
                android:textColor="@color/textColor" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>