<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutSignUp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scrollbars="none">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_signup_side"
        android:paddingRight="@dimen/padding_signup_side">

        <com.peekaboo.presentation.app.view.HelveticaTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:id="@+id/ilUsername"

            app:errorTextAppearance="@style/Error.Design">

            <com.peekaboo.presentation.app.view.HelveticaEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/username"

                />
        </com.peekaboo.presentation.app.view.HelveticaTextInputLayout>

        <com.peekaboo.presentation.app.view.HelveticaTextInputLayout
            android:id="@+id/ilLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_top"
            app:errorTextAppearance="@style/Error.Design">

            <com.peekaboo.presentation.app.view.HelveticaEditText
                android:id="@+id/etLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/emailOrPhoneNum" />

        </com.peekaboo.presentation.app.view.HelveticaTextInputLayout>


        <com.peekaboo.presentation.app.view.HelveticaTextInputLayout
            android:id="@+id/ilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_top"
            app:errorTextAppearance="@style/Error.Design">

            <com.peekaboo.presentation.app.view.HelveticaEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/password"
                android:inputType="textPassword" />

        </com.peekaboo.presentation.app.view.HelveticaTextInputLayout>


        <com.peekaboo.presentation.app.view.HelveticaTextInputLayout
            android:id="@+id/ilPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_top"
            app:errorTextAppearance="@style/Error.Design">

            <com.peekaboo.presentation.app.view.HelveticaEditText
                android:id="@+id/etPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/confirmPassword"
                android:inputType="textPassword" />

        </com.peekaboo.presentation.app.view.HelveticaTextInputLayout>

        <com.peekaboo.presentation.app.view.HelveticaButton
            android:id="@+id/bSignIn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/credentials_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_signup_side"
            android:text="@string/createAccount"
            android:background="@drawable/button"
            android:textAllCaps="false"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/padding_top">

            <com.peekaboo.presentation.app.view.HelveticaTextView
                android:id="@+id/tvSignUp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="@string/bySignUp1" />

            <com.peekaboo.presentation.app.view.HelveticaTextView
                android:id="@+id/tvSingUp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="@dimen/text_padding"
                android:text="@string/bySignUp2"
                android:textColor="@color/textColor" />

            <com.peekaboo.presentation.app.view.HelveticaTextView
                android:id="@+id/tvSingUp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="@string/bySignUp3" />

            <com.peekaboo.presentation.app.view.HelveticaTextView
                android:id="@+id/tvSignUp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="@dimen/text_padding"
                android:text="@string/bySignUp4"
                android:textColor="@color/textColor" />

        </LinearLayout>

    </LinearLayout>
    <!--</ScrollView>-->

</RelativeLayout>